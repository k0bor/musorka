Option Explicit

Private Sub Label4_Click()

End Sub

Private Sub Userform_Initialize()
    ComboBox1.AddItem "Tempus Sans ITC"
    ComboBox1.AddItem "Times New Roman"
    ComboBox1.AddItem "Tw Cen MT"
    ComboBox1.AddItem "Impact"
    ComboBox2.AddItem "8"
    ComboBox2.AddItem "10"
    ComboBox2.AddItem "12"
    ComboBox2.AddItem "30"
    ComboBox3.AddItem "курсив"
    ComboBox3.AddItem "жирный"
    ComboBox3.AddItem "подчеркивание"
    
End Sub

Private Sub ComboBox1_Change()

End Sub

Private Sub CommandButton1_Click()
 Label4.Font = ComboBox1.Text
 Label4.Font.Size = ComboBox2.Text
 Select Case ComboBox3.Text
    Case Is = "курсив"
            Label4.Font.Italic = True
            Label4.Font.Bold = False
            Label4.Font.Underline = False
    Case Is = "жирный"
            Label4.Font.Italic = False
            Label4.Font.Bold = True
            Label4.Font.Underline = False
    Case Is = "подчеркивание"
             Label4.Font.Italic = False
            Label4.Font.Bold = False
            Label4.Font.Underline = True
    End Select
    
End Sub
